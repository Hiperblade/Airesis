<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-US">
<head>
  <title><%= (@page_title || t('open_space')) + ' - ' + APP_SHORT_NAME %></title>

  <%= render :partial => "layouts/head" %>
  <%= stylesheet_link_tag 'menu_left' %>
  <meta name="description" content="<%= (@page_descr) %>">

</head>
<body style="min-width:1000px;">


<% content_for :menu do %>
        <span class="tit"><%= @page_title %></span>
        <%= image_tag 'logo120.png', :width => 60, :alt => APP_LONG_NAME %>


    <div id="submenu">
      <%= link_to "COS'E' AIRESIS?", edemocracy_path, :class => 'coseButton', class: (params[:action] == 'whatis' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'PARTECIPA', partecipa_path, :class => 'sviluppoButton', class: (params[:action] == 'engage' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'VIDEO GUIDE', videoguide_path, :class => 'videoButton', class: (params[:action] == 'videoguide' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'CHI SIAMO', chisiamo_path, :class => 'chisiamoButton', class: (params[:action] == 'whowe' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'SOSTIENICI', sostienici_path, :class => 'sostieniButton', class: (params[:action] == 'helpus' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'ROADMAP', roadmap_path, :class => 'roadmapButton', class: (params[:action] == 'roadmap' ? 'sel' : '') %>
      <span> ⋅ </span>
      <%= link_to 'PRESS', press_path, :class => 'pressButton', class: (params[:key] == 'press' ? 'sel' : '') %>
      <div class="borx"></div>
      <div class="tria" style="left: 389px;"></div>
    </div>
<% end %>

<%= render :partial => "layouts/header" %>

<div id="main" style="right:0px;min-width:1000px;">
  <!-- ##### Main Copy ##### -->
  <div id="main-copy">
    <div id="menu-left">
      <div class="menu2">
        <%= yield :left_panel %>
      </div>
    </div>
    <div id="centerpanelextended" style="font-size: 16px; line-height: 22px;">
      <div class="centerfloat <%= raw @extend ? 'extended' : '' %>">
        <%= yield :layout %>
      </div>

      <%= render :partial => "layouts/menu_right" %>
      <div class="clearboth"></div>
    </div>
    <div style="clear: both; height: 0; overflow: hidden;"></div>
    <%= render :partial => "layouts/footer" %>
  </div>
</div>

</body>
</html>
